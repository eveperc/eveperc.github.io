---

import ArticlesWrapper from "@features/Post/Wrapper.astro";

import Layout from "@layouts/Layout/Index.astro";
import PostCard from "@features/Post/Card.astro"

const allPosts = await Astro.glob('../pages/posts/*.md');
const { page } = Astro.params;
const pageNumber = page ? parseInt(page) : 1;
const pageSize = 10;
const startIndex = (pageNumber - 1) * pageSize;
const endIndex = startIndex + pageSize;
const posts = allPosts.slice(startIndex, endIndex);

export async function getStaticPaths() {
  const allPosts = await Astro.glob('../pages/posts/*.md');
  const pageSize = 10;
  const totalPages = Math.ceil(allPosts.length / pageSize);

  return Array.from({ length: totalPages }, (_, i) => {
    if (i === 0) {
      return [
        { params: { page: undefined } },  // ルートパス / 用
        { params: { page: '1' } }         // /1 用
      ];
    }
    return {
      params: { page: (i + 1).toString() }
    };
  }).flat();
}

---

<Layout title="NeoEveLog" description="NeoEveLog">
  <ArticlesWrapper>
    {
      posts.map((item,index) => (
      <PostCard post={item} />
      ))
    }
  </ArticlesWrapper>
</Layout>

