---
import DaisyUIColors from "@layouts/Colors";

const border = `border-2 border-${DaisyUIColors.base[300]} rounded-lg`;
const padding = "p-10";
const background = `bg-${DaisyUIColors.base[200]}`;
const shadow = `shadow-2xl`;
const text = `font-bold`;
const wrapStyle = `${border} ${padding} ${background} ${shadow} ${text}`;
---

<div class={wrapStyle}>
  <slot />
</div>
